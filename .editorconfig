# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs

root = true

[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Shell scripts (sh, bash)
[*.sh]
indent_style = space
indent_size = 2

# Nushell scripts
[*.nu]
indent_style = space
indent_size = 4

